@model CourseListViewModel
<div class="row">
    <div class="col-md-8">
        <h1 class="my-2">Catalogo Corsi</h1>
    </div>
    <div class="col-md-4 d-flex align-items-center">
        <form asp-controller="Courses" asp-action="Index" method="get">
            <div class="input-group">
                <input name="search" value="@Model.Input.Search" placeholder="Cerca un corso..." class="border-primary" />
                <button class="btn btn-outline-primary">
                    <i class="bi bi-search"></i>
                </button>
            </div>
        </form>
    </div>
</div>

<div class="row mt-3">
    <div class="col-md-1"></div>
    <div class="col-md-5">
        <order-link order-by="Title" Input="@Model.Input">Titolo</order-link>
    </div>
    <div class="col-md-2">
        <order-link order-by="Rating" Input="@Model.Input">Valutazione</order-link>
    </div>
    <div class="col-md-2">
        <order-link order-by="CurrentPrice" Input="@Model.Input">Prezzo</order-link>
    </div>
    <div class="col-md-2"></div>
</div>

<section class="list-group mt-1 mb-3">
    @foreach (var course in Model.Courses.Results)
    {
        <div class="row align-items-center list-group-item d-flex">
            <div class="col-md-1">
                <img src="@course.ImagePath" width="70" />
            </div>
            <div class="col-md-5">
                <h2>@course.Title</h2>
                <author class="text-secondary">di @course.Author</author>
            </div>
            <div class="col-md-2" title="@course.Rating">
                <rating value="@course.Rating"></rating>
            </div>
            <div class="col-md-2">
                <price curren-price="@course.CurrentPrice" full-price="@course.FullPrice"></price>
            </div>
            <div class="col-md-2">
                <a asp-action="Detail" asp-controller="Courses" asp-route-id="@course.Id" class="btn btn-outline-primary">Dettaglio Corso @course.Id</a>
            </div>
        </div>
    }
</section>

@{
    int totalPages = (int)Math.Ceiling(Model.Courses.TotalCount / (decimal)Model.Input.Limit);
    int currentPage = Model.Input.Page;
}

<nav class="d-flex justify-content-center">
    <ul class="pagination">
        @if (currentPage > 1)
        {
            <li class="page-item"><a class="page-link" asp-controller="Courses" asp-action="Index" asp-route-page="@(currentPage - 1)" asp-route-search)="@Model.Input.Search" asp-route-orderby="@Model.Input.OrderBy" asp-route-ascending="@Model.Input.Ascending"><i class="bi bi-arrow-left"></i></a></li>
        }
        @for (int p = Math.Max(1, currentPage - 4); p <= Math.Min(totalPages, currentPage + 4); p++)
        {
            if (p == currentPage)
            {
                <li class="page-item active"><a class="page-link" asp-controller="Courses" asp-action="Index" asp-route-page="@p" asp-route-search)="@Model.Input.Search" asp-route-orderby="@Model.Input.OrderBy" asp-route-ascending="@Model.Input.Ascending">@p</a></li>
            }
            else
            {
                <li class="page-item"><a class="page-link" asp-controller="Courses" asp-action="Index" asp-route-page="@p" asp-route-search)="@Model.Input.Search" asp-route-orderby="@Model.Input.OrderBy" asp-route-ascending="@Model.Input.Ascending">@p</a></li>
            }
        }
        @if (currentPage < totalPages)
        {
            <li class="page-item"><a class="page-link" asp-controller="Courses" asp-action="Index" asp-route-page="@(currentPage + 1)" asp-route-search)="@Model.Input.Search" asp-route-orderby="@Model.Input.OrderBy" asp-route-ascending="@Model.Input.Ascending"><i class="bi bi-arrow-right"></i></a></li>
        }
    </ul>
</nav>