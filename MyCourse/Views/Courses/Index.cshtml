@model List<CourseViewModel>
<h1 class="my-2">Catalogo Corsi</h1>

<section class="list-group my-3">
@foreach(var course in Model)
{
<div class="row align-items-center list-group-item d-flex">
    <div class="col-md-1">
        <img src="@course.ImagePath" width="70"/>
    </div>
    <div class="col-md-5">
        <h2>@course.Title</h2>
        <author class="text-secondary">di @course.Author</author>
    </div>
    <div class="col-md-2" title="@course.Rating">
      @for (int i = 0; i < 5; i++)
    {
        if (course.Rating >= i + 1)
        {
            <i class="bi bi-star-fill"></i>
        }
        else if (course.Rating >= i + 0.5)
        {
            <i class="bi bi-star-half"></i>
        }
        else
        {
            <i class="bi bi-star"></i>
        }
    }
    </div>
    <div class="col-md-2">
        @course.CurrentPrice <br /> <s class="text-secondary">@course.FullPrice</s>
    </div>
    <div class="col-md-2">
        <a asp-action="Detail" asp-controller="Courses" asp-route-id="@course.Id" class="btn btn-outline-primary">Dettaglio Corso @course.Id</a>
    </div>
</div>
}
</section>