@using MyCourse.Models.ViewModel
@{
    ViewData["Title"] = "Home Page";
    @model HomeViewModel
}

<div class="jumbo mb-3">
    <div class="jumbo-content">
        <h1 class="display-4">Benvenuto su <strong>MyCourses</strong></h1>
        <p>Benvenuti su MyCourses, la miglior piattoforma per crescere da casa</p>
        <a class="btn btn-primary btn-lg" asp-action="Index" asp-controller="Courses">Sfoglia Corsi <i class="bi bi-arrow-right"></i></a>
    </div>
</div>

<h2>Aggiunti di recente</h2>
<section class="list-group mt-1 mb-3">
    @foreach (var course in Model.MostRecentCourses)
    {
        <div class="row align-items-center list-group-item d-flex">
            <div class="col-md-1">
                <img src="@course.ImagePath" width="70" />
            </div>
            <div class="col-md-5">
                <h2>@course.Title</h2>
                <author class="text-secondary">di @course.Author</author>
            </div>
            <div class="col-md-2" title="@course.Rating">
                @for (int i = 1; i <= 5; i++)
                {
                    if (course.Rating >= i)
                    {
                        <i class="bi bi-star-fill text-warning"></i>
                    }
                    else if (course.Rating > i - 1)
                    {
                        <i class="bi bi-star-half text-warning"></i>
                    }
                    else
                    {
                        <i class="bi bi-star"></i>
                    }
                }
            </div>
            <div class="col-md-2">
                @course.CurrentPrice <br /> <s class="text-secondary">@course.FullPrice</s>
            </div>
            <div class="col-md-2">
                <a asp-action="Detail" asp-controller="Courses" asp-route-id="@course.Id" class="btn btn-outline-primary">Dettaglio Corso @course.Id</a>
            </div>
        </div>
    }
</section>

<h2>Migliori di sempre</h2>

<section class="list-group mt-1 mb-3">
