@using MyCourse.Models.ViewModel.Lessons
@model LessonDetailViewModel

<section>
    <div class="row">
        <div class="col-md-9 d-flex align-items-center gap-3">
            <h1>@Model.Title</h1>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-md-9">
            <h4>Duration: @Model.Duration</h4>
            <p html-sanitize>@Model.Description</p>
        </div>
    </div>
    <div>
        <a asp-controller="Courses" asp-action="Detail" asp-route-id="@Model.CourseId"><i class="fas fa-arrow-left"></i> Torna al corso</a>
    </div>
</section>
