{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Default": "Server=(localdb)\\MyLocalDB;Database=MyCourse;Trusted_Connection=True;"
  },
  "MemoryCache": {
    "SizeLimit": 1000,
    "AbsoluteExpirationTimer": "00:00:00:59"
  },
  "Courses": {
    "PerPage": 10,
    "Order": {
      "By": "Title",
      "Ascending": true,
      "Allow": [ "Title", "Rating", "CurrentPrice" ]
    }
  }
}
